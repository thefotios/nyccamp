      %h2 The Old Days
      %div
        %div{:font => "", :style => "font-size: 24px;"}
          %ol
            %li
              %span{:style => "text-align: center;"} Have Idea
              %br/
            %li
              %span{:style => "text-align: center;"} Get Budget
              %br/
            %li
              %span{:style => "text-align: center;"} Submit hardware acquisition request
              %br/
            %li
              %span{:style => "text-align: center;"} Wait
              %br/
            %li
              %span{:style => "text-align: center;"} Get Hardware
              %br/
            %li
              %span{:style => "text-align: center;"} Deploy framework/appserver
              %br/
            %li
              %span{:style => "text-align: center;"} Deploy testing tools
              %br/
            %li
              %span{:style => "text-align: center;"} Test testing tools
              %br/
            %li
              %span{:style => "text-align: center;"} Code, test, repeat
              %br/
            %li
              %span{:style => "text-align: center;"} Configure Prod servers (and buy them if needed)
              %br/
            %li
              %span{:style => "text-align: center;"} Push to Prod
              %br/
            %li
              %span{:style => "text-align: center;"} Launch
              %br/
            %li
              %span{:style => "text-align: center;"} Order more servers to meet demand
              %br/
            %li
              %span{:style => "text-align: center;"} Wait
              %br/
            %li
              %span{:style => "text-align: center;"} Deploy new servers
              %br/
            %li
              %span{:style => "text-align: center;"} Etc.
              %br/
